<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_item_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/text_codigo_producto"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Nombre del Negocio" />

        <TextView
            android:id="@+id/text_cliente_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_codigo_producto"
            android:layout_alignStart="@+id/text_codigo_producto"
            android:layout_below="@id/text_codigo_producto"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="Cliente: Jorge Ramos" />

    </RelativeLayout>

</LinearLayout>